<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenNotice"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/value_studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#E86547"
        />

    <TextView
        android:id="@+id/value_studentClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="#777777"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#D6D6D6"
        >
    </View>


    <TextView
        android:id="@+id/value_openJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/value_openSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/value_openCreditScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="13dp"
        android:backgroundTint="#FFB800"
        android:fontFamily="@font/nanumbarungothic"
        android:padding="5dp"
        android:text="닫기"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>